<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <joint name="lidar_base_joint" type="fixed">
        <parent link="chassis"/>
        <child link="base"/>
        <origin xyz="0.2 0 0.18" rpy="0 0 0"/>
    </joint>

    <link name="base">
        <visual>
            <geometry>
                <cylinder radius="0.04267" length="0.05867"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04267" length="0.05867"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.2" length="0.05867" radius="0.04267">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="base">
        <material>Gazebo/Red</material>
    </gazebo>


    <joint name="laser_joint" type="fixed">
        <parent link="base"/>
        <child link="top"/>
        <origin xyz="0 0 0.067" rpy="0 0 0"/>
    </joint>

    <link name="top">
        <visual>
            <geometry>
                <cylinder radius="0.04267" length="0.07357"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04267" length="0.07357"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.07357" radius="0.04267">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


