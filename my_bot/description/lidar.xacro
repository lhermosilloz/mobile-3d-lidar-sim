    <gazebo reference="top">
        <material>Gazebo/Red</material>

        <sensor type="ray" name="livox_mid360">
          <pose>0 0 0 0 0 0</pose>
          <visualize>false</visualize>
          <update_rate>10</update_rate>

          <ray>
                <scan>
                    <horizontal>
                        <!-- Approximate circular FOV with horizontal samples -->
                        <samples>360</samples>
                        <resolution>1</resolution>
                        <!-- 38.4° FOV = ±19.2° -->
                        <min_angle>-3.142</min_angle>  <!-- -19.2° -->
                        <max_angle>3.142</max_angle>   <!-- +19.2° -->
                    </horizontal>
                    <vertical>
                        <!-- Circular FOV approximated with vertical layers -->
                        <samples>100</samples>
                        <resolution>1</resolution>
                        <min_angle>-0.1221</min_angle>  <!-- -19.2° -->
                        <max_angle>0.9075</max_angle>   <!-- +19.2° -->
                    </vertical>
                </scan>

                <range>
                    <min>0.5</min>        <!-- Mid-360 min range -->
                    <max>70.0</max>       <!-- Typical Mid-360 range -->
                    <resolution>0.002</resolution>
                </range>

                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.0</stddev>
                </noise>
          </ray>

          <plugin name="gazebo_ros_laser_controller" filename="libgazebo_ros_velodyne_laser.so">
            <ros>
              <namespace>/livox</namespace>
              <remapping>~/out:=livox_points</remapping>
            </ros>

            <frame_name>top</frame_name>
            <organize_cloud>false</organize_cloud>
            <min_range>0.5</min_range>
            <max_range>70.0</max_range>
            <gaussian_noise>0.01</gaussian_noise>
          </plugin>
        </sensor>
    </gazebo>

</robot>
